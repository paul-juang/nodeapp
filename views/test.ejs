 :root {
     --color-primary: #0073ff;
     --color-white: #e9e9e9;
     --color-black: #141d28;
     --color-black-1: #212b38;
   }

  * {
    margin: 2px;
    padding: 0;
    box-sizing: border-box;
   } 

  body {
    font-family: sans-serif;
    background-color: #444;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    width: 100vw;
    height: 100vh;
   }

  nav ul {
    display: flex;
    justify-content: center;
    list-style: none;
  }

  nav ul li {
    width: 10vw;
  }

  nav ul li a {
    display: block;
    color: var(--color-white);
    padding: 1rem 0 .25rem 0;
    text-decoration: none;
    text-align: center; 
  }

  nav ul li > ul {
    display: none;
  }

  nav ul li > ul li {
    margin-top: .25rem;
  }

  nav ul li > ul li a {
    padding: 0;
  }

  nav ul li:hover > ul {
    display: flex;
    flex-direction: column;
  }

  nav ul li a:hover {
    color: var(--color-primary);
  }

  #check {
    display: none;
  }

  .checkbtn #bars {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 1rem;
    color: var(--color-white);
    cursor: pointer;
    display: none;
  }

  
@media screen and (max-width: 940px) {
  nav ul {
    display: flex;
    flex-direction: column;
  }

  nav ul li {
    width:38vw;
    font-size: 1.2rem;
  } 

  nav ul li > ul li a {
    background: rgba(68, 68, 69, 0.6);
   }
   
  nav > ul li {
    position: relative;
    left: -9999px;
    transition: .25s ease-in-out;
   } 

  .checkbtn #bars {
    display: block;
  }
 
  #check:checked ~ ul li {
    left: 0;
  }

}


